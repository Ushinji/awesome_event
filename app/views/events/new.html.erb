<p>
  <%= form_for(@event)do |f| %>
    <p>
      <%= f.label :name, 'イベント名' %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :place, '開催場所' %>
      <%= f.text_field :place %>
    </p>
    <p>
      <%= f.label :start_time, '開始日時' %>
      <%= f.datetime_select :start_time, class: 'form-control' %>
    </p>
    <p>
      <%= f.label :end_time, '終了日時' %>
      <%= f.datetime_select :end_time, class: 'form-control' %>
    </p>
    <p>
      <%= f.label :content, 'イベント内容' %>
    </p>
    <p>
      <%= f.text_area :content %>
    </p>
    <%= f.submit '登録', class: 'btn btn-primary' %>
  <% end %>
</p>
